<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="EyeCareReminder.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Eye Care Reminder">

    <Window.SystemBackdrop>
        <MicaBackdrop Kind="BaseAlt"/>
    </Window.SystemBackdrop>

    <Grid Padding="20" RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock
            x:Name="TitleTextBlock"
            Grid.Row="0"
            Text="ðŸ‘ï¸ Eye Care Reminder"
            FontSize="20"
            FontWeight="SemiBold"
            HorizontalAlignment="Center"
            Margin="0,0,0,8"/>

        <!-- Status Display -->
        <Border
            x:Name="StatusBorder"
            Grid.Row="1"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            CornerRadius="8"
            Padding="12,8">
            <TextBlock 
                x:Name="StatusText"
                Text="Ready to Start"
                FontSize="16"
                HorizontalAlignment="Center"
                FontWeight="Medium"/>
        </Border>

        <!-- Timer Display -->
        <Viewbox
            x:Name="TimerViewbox"
            Grid.Row="2"
            Stretch="Uniform"
            Margin="0,12,0,12">
            <Grid>
                <ProgressRing 
                    x:Name="ProgressRing"
                    Width="120"
                    Height="120"
                    IsIndeterminate="False"
                    Value="0"
                    Maximum="100"
                    Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                <StackPanel 
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                    <TextBlock 
                        x:Name="TimerText"
                        Text="20:00"
                        FontSize="32"
                        FontWeight="Bold"
                        HorizontalAlignment="Center"/>
                    <TextBlock 
                        x:Name="PhaseText"
                        Text="Minutes"
                        FontSize="14"
                        HorizontalAlignment="Center"
                        Opacity="0.7"/>
                </StackPanel>
            </Grid>
        </Viewbox>

        <!-- Control Buttons -->
        <StackPanel
            x:Name="ControlButtonsPanel"
            Grid.Row="3"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            Spacing="8">
            <Button 
                x:Name="StartButton"
                Content="â–¶ï¸ Start"
                Click="StartButton_Click"
                MinWidth="90"
                Style="{StaticResource AccentButtonStyle}"/>
            <Button 
                x:Name="PauseButton"
                Content="â¸ï¸ Pause"
                Click="PauseButton_Click"
                MinWidth="90"
                IsEnabled="False"/>
            <Button 
                x:Name="ResetButton"
                Content="ðŸ”„ Reset"
                Click="ResetButton_Click"
                MinWidth="90"/>
        </StackPanel>

        <!-- Settings Button -->
        <Button
            x:Name="SettingsButton"
            Grid.Row="4"
            Content="âš™ï¸ Settings"
            Click="SettingsButton_Click"
            HorizontalAlignment="Center"
            Margin="0,8,0,0"/>
    </Grid>
</Window>